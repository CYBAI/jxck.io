<script type="application/ld+json">
{
  "@context": "http://schema.org",
  "@type": "BlogPosting",
  "mainEntityOfPage":{
    "@type":"WebPage",
    "@id":"https://<%= host %>"
  },
  "headline": "<%= title %> | <%= host %>",
  "image": {
    "@type": "ImageObject",
    "url": "<%= icon %>",
    "height": 700,
    "width": 700
  },
  "datePublished": "<%= created_at %>T08:00:00+08:00",
  "dateModified": "<%= updated_at %>T08:00:00+08:00",
  "author": {
    "@type": "Person",
    "name": "Jxck",
    "image": "<%= icon %>"
  },
   "publisher": {
    "@type": "Organization",
    "name": "Jxck",
    "logo": {
      "@type": "ImageObject",
      "url": "<%= icon %>",
      "height": 60,
      "width": 257
    }
  },
  "description": "<%= short hsp description %>"
}
</script>
